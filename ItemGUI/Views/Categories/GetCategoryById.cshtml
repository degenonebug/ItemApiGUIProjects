@model ItemGUI.ViewModels.CategoryBooksViewModel
@{
    ViewData["Title"] = "GetCategoryById";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<h3 class="text-success">@ViewBag.SuccessMessage</h3>
<div>
    <h1>Детали категории</h1>
    <br />
    <div>
        <p>
            <strong>Наименование категории:</strong> @Model.Category.Name
        </p>
        <div class="form-group text-center">
            <a class="btn btn-sm btn-primary" asp-controller="Categories" asp-action="UpdateCategory"
               asp-route-categoryId="@Model.Category.Id">Обновить категорию</a>
            <a class="btn btn-sm btn-danger" asp-controller="Categories" asp-action="DeleteCategory"
               asp-route-categoryId="@Model.Category.Id">Удалить категорию</a>
        </div>
    </div>
    <br /><br />
    <div>
        <h4>@ViewBag.BookMessage</h4>
        @foreach(var item in Model.Books)
        {
            <div>
                <p>
                    <strong>Принадлежащие товары:</strong>
                    <span>@item.Title</span>
                    <a asp-controller="Home" asp-action="GetBookById"
                       asp-route-bookId="@item.Id">Детали товара</a>
                </p>
            </div>
        }
    </div>
</div>

